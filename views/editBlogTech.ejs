<% include partials/nav %>
<div class="container-fluid p-0 text-dark" id="login">
    <h1 class="p-5 mt-5 text-center">Nieuwe post toevoegen aan Boeken</h1>
    <hr>
 <form action="/" method="POST">
 <div class="container-fluid m-0 row p-5" id="form newblog">
     <div class="col-lg-6">
    <div class="form-group">
    <label for="exampleFormControlInput1">Titel voor pagina</label>
    <input type="text" class="form-control f1" name="titleTech" id="exampleFormControlInput1" value="<%=Blog.titleTech%>">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Beschrijving</label>
    <input type="text" class="form-control f1" name="descTech" id="exampleFormControlInput1" value="<%=Blog.descTech%>">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Datum</label>
    <input type="text" class="form-control f1" name="dateTech" id="exampleFormControlInput1" value="<%=Blog.dateTech%>">
  </div>
   <div class="form-group">
    <label for="exampleFormControlInput1">Thumbnail (350px +)</label>
    <input type="text" class="form-control f1" name="thumbTech" id="exampleFormControlInput1" value="<%=Blog.thumbTech%>">
  </div>
     <div class="form-group">
    <label for="exampleFormControlInput1">Video</label>
    <input type="text" class="form-control f1" name="bannerTech" id="exampleFormControlInput1" value="<%=Blog.bannerTech%>">
  </div>
  </div>
  <div class="col-md-6">
  <div class="form-group">
    <label for="exampleFormControlTextarea1"><%=Blog.contentTech%></label>
    <textarea class="form-control" name="contentTech" id="exampleFormControlTextarea1" rows="7.5" placeholder=""></textarea>
  </div>
    <button class=" btn btn-outline-dark m-auto" type="submit" >Posten! &rarr;</button>
    </div>
    
    </div>
        </form>
</div>

